<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center;">Create a New Museum</h1>
		
		<div style="width: 30%; margin: 25px auto;">
			<form action="/museums" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name" required>
				</div>
				
				<div class="form-group">
					<input class="form-control" type="file" name="image" placeholder="image" multiple required>
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="address" placeholder="address">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="price" placeholder="price">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="contact" placeholder="contact">
				</div>
				
				<div class="form-group">
					<textarea class="form-control" name="description" placeholder="description" rows="6" cols="70"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Create!</button>
				</div>
			</form>
			<a href="/museums">Go Back</a>
		</div>
					
	</div>	

<%- include("../partials/footer") %>